class Solution {
    public boolean isPalindrome(String s) {
        int i=0;
        int j=s.length()-1;
        boolean flag=false;
        while(i<j){
            while(i<j && !isAlpha(s.charAt(i))){
                i++;
            }
            while(i<j && !isAlpha(s.charAt(j))){
                j--;
            }
            if(i<j && Character.toLowerCase(s.charAt(i))!=Character.toLowerCase(j)){
                return false;
            }
            i++;
            j--;
        }
    return true;
    }
    
    public boolean isAlpha(char c1){
        return c1>='A'&& c1<='Z' || c1>='a' && c1<='z' || c1>='0'&& c1<='9';
    }
}
//TC:O(N)
//SC:O(1)
